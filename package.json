{
  "name": "u-control",
  "version": "1.0.0",
  "description": "Personal life control application",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && node server.js",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && echo 'Bootstrap frontend - no build needed'",
    "deploy": "cd backend && npm run deploy",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "personal",
    "control",
    "life",
    "management",
    "serverless",
    "react"
  ],
  "author": "Rafael",
  "license": "MIT"
}
